function plusMinus(arr) {
    let zeros= 0;
    let positives = 0;
    let negatives = 0;
   
    for (let i = 0; i < arr.length; i++) {
        if (arr[i] === 0) {
            zeros++;
        } else if (arr[i] > 0) {
            positives++;
        } else {
            negatives++;
        }
    }
    console.log((positives / arr.length).toFixed(6));
    console.log((negatives / arr.length).toFixed(6));
    console.log((zeros / arr.length).toFixed(6));
}
